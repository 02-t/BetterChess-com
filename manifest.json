{
	"manifest_version": 3,
	"name": "Chess.com save games",
	"version": "1",

	"icons": {
		"128": "icon128.png"
	  },

	"action": {
		"default_popup": "popup.html",
		"default_title": "hello"
	},

	"permissions": [
		"storage"
	],

	"content_scripts": [
		{
			"matches": [
				"https://*.chess.com/*",
				"https://*.lichess.org/*"
			],

			"js": ["content_scripts/BetterChess_com.js", "content_scripts/AnalysisTab-chess_com.js",
				"content_scripts/AnyRow-chess_com.js", "content_scripts/lichess-load_analysis.js", "content_scripts/LiveTab-chess_com.js"],

			"css": ["content-styles.css"]
		}
	]
}